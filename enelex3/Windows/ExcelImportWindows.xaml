<Window x:Class="enelex3.Windows.ExcelImportWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:enelex3.Windows"
        xmlns:viewModel ="clr-namespace:enelex3.ViewModel"
       
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModel:ExcelImportViewModel}"
        Title="Import"  SizeToContent="Width" Height="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Background="WhiteSmoke">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,10,10,10">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource OpenFolderButton}" Grid.Row="0" Command="{Binding OpenCommand}" Margin="5" ></Button>
                <TextBox Text="{Binding NameFileTxt}" MinWidth="400" Margin="5" Height="20" VerticalContentAlignment="Center" ></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Izaberi Sheet:" Margin="5,0,0,0" VerticalAlignment="Center"></TextBlock>
                <ComboBox IsEditable="True" HorizontalAlignment="Left" Height="25" ItemsSource="{Binding NameSheetTxt,UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedSheetFileTxt,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="5,0,0,0" Width="200"></ComboBox>
                <Button Style="{StaticResource ExcelImportHorButton}" Grid.Row="0" Command="{Binding ImportCommand}" Margin="5"  HorizontalAlignment="Left"></Button>
            </StackPanel>
           
           
        </StackPanel>
     
        <DataGrid Grid.Row="1"  Style="{StaticResource dgCustom}"  ItemsSource="{Binding GetImportMeasure}" >
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="LoadingRow">
                    <b:InvokeCommandAction Command="{Binding GetIndexCommand}" PassEventArgsToCommand="True"></b:InvokeCommandAction>
                </b:EventTrigger>
            </b:Interaction.Triggers>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Broj uzorka [n]" Binding="{Binding  Index}"></DataGridTextColumn>
                <DataGridTextColumn Header="Pepeo [Ge]" Binding="{Binding  Ge}"></DataGridTextColumn>
                <DataGridTextColumn Header="Pepeo [Lab]" Binding="{Binding  Lab}"></DataGridTextColumn>
                <DataGridTextColumn Header="Vlaga [W]" Binding="{Binding  W}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
      
    </Grid>
</Window>
